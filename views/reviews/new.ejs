<%- include('../partials/header') %>

<div class="error">
  <% if(message) { %>
      <li><%=message %></li>
  <% }%>
  </div>


<form class="new-review" action="/games/<%=g._id%>/reviews" method="POST" autocomplete="off">
  <h2>Add a new review</h2>
  <div class="mb-3">
    <label class="form-label">User</label>
    <input type="text" class="form-control" id="disabled" name="username" value="<%=u.username%>" readonly disabled>
  </div>
  
  <div class="mb-3">
  <div><label class="form-label">Rating</label></div>
  <div class="rate">
    <input name="rating" type="radio" id="star5" name="rate" value="5" required/>
    <label for="star5" title="text"></label>
    <input name="rating" type="radio" id="star4" name="rate" value="4" required/>
    <label for="star4" title="text"></label>
    <input name="rating" type="radio" id="star3" name="rate" value="3" required/>
    <label for="star3" title="text"></label>
    <input name="rating" type="radio" id="star2" name="rate" value="2" required/>
    <label for="star2" title="text"></label>
    <input name="rating" type="radio" id="star1" name="rate" value="1" required/>
    <label for="star1" title="text"></label>
  </div>
  </div>
  
  <div class="mb-3">
    <label class="form-label">Review</label>
    <textarea class="form-control" name="review" rows="3" required></textarea>
  </div>

  <div class="text-center">
    <button class="btn btn-outline-primary btn-block" id="btn" type="submit">Submit</button>
  </div>
</form>



<%- include('../partials/footer') %>



