<%- include('./partials/header') %>
  
<div class="container">
<div class="jumbotron"><h1 class="special-font desc"><%= title %></h1>
    <p class="special-font desc">Welcome to the <%= title %></p>
    <a href="/games">List of Games</a>        
</div>

<div class="row">
    <div class="col-sm-12">
        <h2 class="special-font">FEATURED</h2>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">

        <ol class="carousel-indicators">
          <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
          <li data-target="#myCarousel" data-slide-to="1"></li>
          <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
      
        <div class="carousel-inner">
          <div class="item active">
            <img src="https://i.imgur.com/CdvIV32.jpg"/>
          </div>     
          <div class="item">
            <img src="https://i.imgur.com/wf1pzJZ.jpg">
          </div>      
          <div class="item">
            <img src="https://i.imgur.com/VLuWTYb.jpg"/>
          </div>
        </div>
      
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
</div>
<div class="col-sm-12 special-font index-review">
  <h2>LATEST REVIEWS</h2>
</div>

<% games.slice(-3).forEach(function(g) { %>
  <% g.reviews.forEach(function(r) { %>
    <div class="col-sm-4 index-review-box">
      <a href="/games/<%=g._id%>"><strong><%=g.name%></strong></a></br>
      <a href="/users/<%=r.userID%>"><strong><%=r.username%></strong></a></br>
      <%=r.createdAt.toLocaleDateString()%></br>
      <%=r.review%>
    </div>
  <% }) %>
<% } ) %>


</div>
</div>
<%- include('./partials/footer') %>

